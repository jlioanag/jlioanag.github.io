<div id="live-header" />

<script>
    const phrase =
        "JULIAN LIOANAG IS A PERSON ON PLANET EARTH WHO WAKES UP EVERY MORNING AND EATS BREAKFAST USUALLY. ";
    const header = document.getElementById("live-header");
    let intervalId: NodeJS.Timeout;
    let i: number;

    if (header) {
        i = 0
        header.textContent = phrase.slice(i, i + 15);

        header.addEventListener("mouseover", () => {
            intervalId = setInterval(() => {
                let display = phrase.slice(i, i + 15);

                if (display.length < 15) {
                    display += phrase.slice(0, 15 - display.length);
                }

                header.textContent = display;
                i = (i + 1) % phrase.length;
            }, 200);
        });

        header.addEventListener("mouseout", () => {
            clearInterval(intervalId);
            i = 0;
            header.textContent = phrase.slice(i, i + 15);
        });
    }
</script>
